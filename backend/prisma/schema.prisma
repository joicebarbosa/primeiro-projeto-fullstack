
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // ID primário, auto-incrementável
  username  String   @unique @db.VarChar(191)      // Nome de usuário, deve ser único, com limite de 191 caracteres para índices únicos no MySQL
  email     String   @unique @db.VarChar(191)      // Email, deve ser único, com limite de 191 caracteres para índices únicos no MySQL
  password  String   @db.VarChar(255)            // Senha (hash), tipo VARCHAR com um bom tamanho
  firstName String?  @db.VarChar(255)            // Primeiro nome, opcional (String?), tipo VARCHAR
  lastName  String?  @db.VarChar(255)             // Sobrenome, opcional (String?), tipo VARCHAR
  createdAt DateTime @default(now())             // Data de criação, preenchido automaticamente
  updatedAt DateTime @updatedAt                  // Data de atualização, atualizado automaticamente
}